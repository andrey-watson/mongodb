type: update
name: MongoDB Trial Image Limitations

permanent: true

targetNodes: none
nodeGroupAlias:
  ${settings.nodeGroup}: nosqldb

onInstall:
  env.control.SetCloudletsCountByGroup [nosqldb]:
    fixedCloudlets: 8
    flexibleCloudlets: 8

onBeforeSetCloudletCount [nosqldb]:
  if (${event.params.flexibleCloudlets:8} > 8):
    stopEvent:
      type: warning
      message: Forbidden.